#include<stdio.h>
int main()
{
    int arm,n,cot=0;
    printf("enter the  number");
    scanf("%d",&n);
    arm=n;
    for(int i=1;i<n;i++)
        {
            if(arm%i==0)
                {
                    cot=cot+i;
                }
        }
        printf("value of cot%d",cot);
    if(n==cot)
        {
                printf("the number is perfect number ");
        }
            else
        {
                printf("the number is not a perfect number");
        }
}
